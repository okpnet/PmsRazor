@inherits QualRazorComponentBase
@typeparam TProperty

<div class="@CssClasses.FIELD">
    @if (FieldDataTypes == FieldDataType.Check)
    {
        <div class="@CssClasses.CONTROL">
            <label class="@CssClasses.Field.CHECKBOX">
                <QualInputField Value="Value" PropertyExpression="PropertyExpression" Provider="@Provider" FieldDataTypes="@FieldDataTypes" @attributes="MergeAttribute"></QualInputField>
                @ChildContent
            </label>
        </div>
    }
    else
    {//ここで初めてDataTypeが決まるので、上のチェックには行かない
        <QualLabel>@ChildContent</QualLabel>
        <div class="@CssClasses.CONTROL">
            <QualInputField Value="Value" PropertyExpression="PropertyExpression" Provider="@Provider" FieldDataTypes="@FieldDataTypes" @attributes="MergeAttribute"></QualInputField>
        </div>
    }
</div>