@inherits RazorCore

<div class="modal @DialogModel.ActiveClass">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">@DialogTitle</p>
            @if (Options.IsCloseButton)
            {
                <button class="delete" type="button" aria-label="close" @onclick="OnClose"></button>
            }
        </header>
        <section class="modal-card-body">
            <div class="message-body">
                @DialogContents
            </div>
        </section>
        <footer class="modal-card-foot">
            @if (PrimaryButtonContent is not null || PrimaryButtonIconContent is not null)
            {
                <PrimaryButton type="@(PrimarySubmitButton?"submit":"button")" ButtonClick="OnPrimaryClick">
                    <ButtonContent>
                        @PrimaryButtonContent
                    </ButtonContent>
                    <IconContent>
                        @PrimaryButtonIconContent
                    </IconContent>
                </PrimaryButton>
            }
            @if (SecondaryButtonContent is not null || SecondaryButtonIconContent is not null)
            {
                <SecondaryButton ButtonClick="OnSecondaryClick">
                    <ButtonContent>
                        @SecondaryButtonContent
                    </ButtonContent>
                    <IconContent>
                        @SecondaryButtonIconContent
                    </IconContent>
                </SecondaryButton>
            }
            @if (TertiaryButtonContent is not null || TertiaryButtonIconContent is not null)
            {
                <TertiaryButton ButtonClick="OnTertiaryClick">
                    <ButtonContent>
                        @TertiaryButtonContent
                    </ButtonContent>
                    <IconContent>
                        @TertiaryButtonIconContent
                    </IconContent>
                </TertiaryButton>
            }
        </footer>
    </div>
</div>
